                    <!DOCTYPE html>
                    <html lang="en">
                    <head>
                        <meta charset="UTF-8">
                        <meta name="viewport" content="width=device-width, initial-scale=1.0">
                        <title>Central Perk Mafia - Friends Edition</title>
                        <link rel="stylesheet" href="/css/style.css">
                    </head>
                    <body>
                        <div class="game-container">
                            <!-- Game Header -->
                            <header class="game-header">
                                <h1 class="game-title">Central Perk Mafia: Friends Edition</h1>
                                <div class="player-info">
                                    <img src="/images/players/<%= player.photo %>" alt="<%= player.name %>" class="player-avatar">
                                    <span class="player-name">Welcome, <%= player.name %>!</span>
                                </div>
                            </header>

                            <!-- Portrait Gallery Section -->
                            <div class="portrait-gallery">
                                <div class="gallery-background">
                                    <% personas.forEach((persona, index) => { %>
                                    <div class="character-frame" 
                                         id="character-<%= index %>" 
                                         data-character="<%= persona.name %>">
                                        <div class="portrait-container">
                                            <img src="/images/characters/<%= persona.image %>" 
                                                 alt="<%= persona.name %>" 
                                                 class="character-portrait">
                                            <div class="speaking-indicator"></div>
                                            <div class="character-name"><%= persona.name %></div>
                                            <div class="character-role"><%= persona.mafiaRole %></div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                            </div>

                            <!-- Game Controls -->
                            <div class="game-controls">
                                <div class="dialogue-box">
                                    <div id="current-dialogue">Welcome to Central Perk Mafia! Choose a character to interact with.</div>
                                </div>

                                <div class="player-actions">
                                    <button id="mic-button" class="action-btn">ðŸŽ¤ Hold to Speak</button>
                                    <button id="vote-button" class="action-btn">ðŸ“Š Vote</button>
                                    <button id="accuse-button" class="action-btn">ðŸ‘† Accuse</button>
                                </div>

                                <div class="selected-character">
                                    <span>Selected: </span>
                                    <span id="selected-name">None</span>
                                </div>
                            </div>
                        </div>

                        <!-- Hidden player data for JavaScript -->
                        <script>
                            window.playerData = {
                                id: '<%= player.id || "player1" %>',
                                name: '<%= player.name %>'
                            };
                        </script>

                        <script src="/socket.io/socket.io.js"></script>
                        <script src="/js/game.js"></script>
                    </body>
                    </html>
